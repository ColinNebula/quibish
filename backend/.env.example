# Backend Environment Configuration Template
# Copy this file to .env and configure for your environment

# Server Configuration
PORT=5001
NODE_ENV=development

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-make-it-long-and-random

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/quibish?retryWrites=true&w=majority

# Seed initial data when starting with an empty database
SEED_INITIAL_DATA=true

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Level
LOG_LEVEL=info

# API Configuration
API_VERSION=v1
MAX_REQUEST_SIZE=10mb