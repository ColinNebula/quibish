# =============================================================================
# Quibish Backend — Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in the real values.
# NEVER commit the actual .env file to version control.
#
# Generate a strong JWT secret:
#   node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# =============================================================================

# ── Server ────────────────────────────────────────────────────────────────────
NODE_ENV=development
PORT=5001

# ── Authentication ────────────────────────────────────────────────────────────
# REQUIRED in production (min 32 chars). Auto-generated in development if absent.
JWT_SECRET=REPLACE_WITH_64_CHAR_RANDOM_HEX

# ── Database (MySQL — optional, app falls back to in-memory store) ────────────
DB_NAME=quibish
DB_USER=root
DB_PASS=
DB_HOST=localhost
DB_PORT=3306

# Set to "true" to insert demo rows on first run
SEED_INITIAL_DATA=false

# ── Uploads ───────────────────────────────────────────────────────────────────
# Absolute or relative path where user-uploaded files are stored
UPLOAD_DIR=uploads

# Maximum upload size in bytes (default 10 MB)
MAX_UPLOAD_SIZE=10485760

# ── Email / SMTP (optional) ───────────────────────────────────────────────────
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@yourdomain.com

# ── Push Notifications (optional) ────────────────────────────────────────────
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@yourdomain.com

# ── Rate Limiting ─────────────────────────────────────────────────────────────
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# ── CORS ──────────────────────────────────────────────────────────────────────
ALLOWED_ORIGINS=http://localhost:3000
