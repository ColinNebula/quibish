{
  "name": "quibish",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://colinnebula.github.io/quibish",
  "dependencies": {
    "crypto-js": "^4.2.0",
    "prop-types": "^15.8.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-scripts": "^5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "postinstall": "node scripts/patch-gh-pages.js",
    "start": "react-scripts start",
    "start:all": "powershell -NoProfile -ExecutionPolicy Bypass -File ./start-all.ps1",
    "stop:all": "powershell -NoProfile -ExecutionPolicy Bypass -File ./stop-all.ps1",
    "start:memory": "node memory-start.js --frontend",
    "build": "set GENERATE_SOURCEMAP=false&& set INLINE_RUNTIME_CHUNK=false&& react-scripts build",
    "build:analyze": "npm run build && npx bundle-analyzer build/static/js/*.js",
    "build:original": "react-scripts build",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "smoke-check": "powershell -NoProfile -ExecutionPolicy Bypass -File ./tools/smoke-check.ps1",
    "test": "react-scripts test --watchAll=false",
    "eject": "react-scripts eject",
    "dev": "concurrently \"npm run backend:start\" \"npm run start\" --names \"API,APP\" --prefix-colors \"green,blue\"",
    "backend:start": "cd backend && node server.js",
    "backend:memory": "node memory-start.js --backend",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:monitor": "pm2 monit",
    "pm2:status": "pm2 status",
    "startup": "pm2 startup",
    "save": "pm2 save",
    "size-check": "npm run build && powershell -Command \"Get-ChildItem build/static -Recurse | Measure-Object -Property Length -Sum | Select-Object @{Name='TotalMB';Expression={[math]::Round($_.Sum/1MB,2)}}\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "gh-pages": "^6.3.0"
  }
}
