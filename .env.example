# Quibish Frontend Environment Configuration Template
# Copy this file to .env and configure for your environment
# Note: Only variables prefixed with REACT_APP_ are accessible in React

# ===========================================
# API Configuration
# ===========================================

# Backend API Base URL
REACT_APP_API_BASE_URL=http://localhost:5001/api

# WebSocket Server URL
REACT_APP_WS_URL=ws://localhost:5000/ws

# GraphQL Endpoint
REACT_APP_GRAPHQL_URL=http://localhost:4000/graphql

# ===========================================
# Authentication & Security
# ===========================================

# JWT Token Storage Key
REACT_APP_TOKEN_STORAGE_KEY=quibish_auth_token

# Session timeout (in minutes)
REACT_APP_SESSION_TIMEOUT=60

# ===========================================
# Feature Flags
# ===========================================

# Enable development mode features
REACT_APP_ENABLE_DEV_TOOLS=true

# Enable experimental features
REACT_APP_ENABLE_EXPERIMENTAL=false

# Enable mock data when backend is offline
REACT_APP_ENABLE_DEMO_MODE=true

# Enable console logging
REACT_APP_ENABLE_LOGGING=true

# Enable performance monitoring
REACT_APP_ENABLE_PERFORMANCE_MONITORING=false

# ===========================================
# UI Configuration
# ===========================================

# Default theme (light/dark/auto)
REACT_APP_DEFAULT_THEME=auto

# Enable animations
REACT_APP_ENABLE_ANIMATIONS=true

# Enable sound effects
REACT_APP_ENABLE_SOUNDS=false

# Default language
REACT_APP_DEFAULT_LANGUAGE=en

# ===========================================
# File Upload Configuration
# ===========================================

# Maximum file size (in MB)
REACT_APP_MAX_FILE_SIZE=10

# Allowed file types (comma separated)
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm,audio/mp3,audio/wav

# Upload endpoint
REACT_APP_UPLOAD_ENDPOINT=/api/upload

# ===========================================
# Real-time Features
# ===========================================

# WebSocket reconnection attempts
REACT_APP_WS_RECONNECT_ATTEMPTS=5

# WebSocket reconnection delay (in ms)
REACT_APP_WS_RECONNECT_DELAY=3000

# Connection timeout (in ms)
REACT_APP_CONNECTION_TIMEOUT=10000

# ===========================================
# Search & Discovery
# ===========================================

# Search debounce delay (in ms)
REACT_APP_SEARCH_DEBOUNCE=300

# Maximum search results per page
REACT_APP_SEARCH_MAX_RESULTS=50

# ===========================================
# External Services
# ===========================================

# Placeholder image service
REACT_APP_PLACEHOLDER_SERVICE=https://images.unsplash.com

# Avatar fallback service
REACT_APP_AVATAR_SERVICE=https://ui-avatars.com/api

# ===========================================
# Development Configuration
# ===========================================

# Enable React DevTools
REACT_APP_ENABLE_REACT_DEVTOOLS=true

# API request timeout (in ms)
REACT_APP_API_TIMEOUT=5000

# Enable hot reloading
FAST_REFRESH=true

# Skip pre-flight checks for faster builds
SKIP_PREFLIGHT_CHECK=true

# Generate source maps
GENERATE_SOURCEMAP=true